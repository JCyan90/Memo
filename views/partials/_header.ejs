<link href="https://fonts.googleapis.com/css?family=Baloo&display=swap" rel="stylesheet">

<script type="text/javascript" src="/scripts/header.js"></script>

<nav class='header'>
  <span id='logo'><img src="https://image.flaticon.com/icons/svg/889/889648.svg"> <a class="navbar-brand" id="logo" href="/">Memo</a></span>

  <form class="form" id="search-form" method="GET">
    <input class="glow" id="search-bar" name="keyword" placeholder="Search...">
  </form>

  <div id="profileIcon">
      <div></div>
  </div>

  <div class="no-login">
    <% if (!user) { %>
    <form method="GET" action="/login">
      <button id="btn-login" type="submit"><img src="https://image.flaticon.com/icons/svg/747/747545.svg"></button>
    </form>
    <% } else if (user) { %>
    <img src='https://i.imgur.com/05Myx2X.png'>
    <a href='/profile/<%= userInfo.id %>'><img class="picImg" src="<%= userInfo.icon %>"></a>
    <form class="btn-logout" method="GET" action="/logout">
      <button type="submit"><img src='https://i.imgur.com/Q3aLimk.png'></button>
    </form>
    <% } %>
  </div>
</nav>
